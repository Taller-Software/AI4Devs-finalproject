# Entorno de la aplicación
APP_ENV=development
APP_DEBUG=true
APP_URL=https://localhost/AI4Devs-finalproject

# Configuración de la base de datos
DB_HOST=localhost
DB_NAME=astillero_tools
DB_USER=root
DB_PASS=

# Configuración de la API
API_VERSION=1.0.0
API_BASE_PATH=/api

# Configuración del servidor SMTP para envío de emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-password-de-aplicacion
SMTP_FROM_EMAIL=tu-email@gmail.com
SMTP_FROM_NAME="Sistema de Herramientas - Astillero"

# Configuración de sesión
SESSION_DURATION=86400 # 24 horas en segundos
SESSION_COOKIE_NAME=ASTILLERO_SESSION
SESSION_COOKIE_SECURE=false # Cambiar a true en producción con HTTPS
SESSION_COOKIE_HTTPONLY=true

# Configuración de Rate Limiting
RATE_LIMIT_MAX_ATTEMPTS=5 # Máximo intentos de login
RATE_LIMIT_WINDOW=900 # Ventana de tiempo en segundos (15 minutos)
RATE_LIMIT_BLOCK_DURATION=3600 # Tiempo de bloqueo en segundos (1 hora)

# Configuración de logs
LOG_ENABLED=true
LOG_PATH=/utils/logs
LOG_LEVEL=error